<main>
    <input id="leaderboardID" type="hidden" value={{id}}>
    <div class="row scoreRow">
        <div class="col scoreCol s6">
            <button class="btn btn-large waves-effect waves-light btnScoreBoard" id="playAgainBtn" type="submit"
                name="action">Play Again</button>
        </div>
        <div class="col scoreCol s6">
            <button class="btn btn-large waves-effect waves-light btnScoreBoard" id="homeBtn" type="submit"
                name="action">Home</button>
        </div>
    </div>
    <!--Score Results and leaderboard-->
    <div class="row">
        <div class="col s7 offset-s4 push-m1">
            <h2 class="blueText">Your <span class="pinkText">Score:</span></h2>
        </div>
        <div class="col s12">
            <h3 class="yellowText center" id="userScore">10 <span
                    class="pinkText">/10</span></h3>
        </div>
    </div>
    <div class="row">
        <div class="col s6 offset-s2 push-m3">
            <h2 class="blueText">Scoreboard<span class="pinkText">:</span></h2>
            {{#each leaders}}
                <h3 class="yellowPrint"><span>{{username}}</span> {{score}}</h3>
            {{/each}}
        </div>
    </div>
</main>
